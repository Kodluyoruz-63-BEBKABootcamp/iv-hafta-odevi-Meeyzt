@{
    ViewData["Title"] = " Student";
}
@using FormsApp.Models.School
@model Student


<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
            <form class="login100-form validate-form flex-sb flex-w" method="post" action="/school/studentRegistiration/info">
                <span class="login100-form-title p-b-32">
                    Ders secimi
                </span>><br />

                <span class="txt1 p-b-11">
                   Öğrenci ismi
                </span>
                <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                    @Html.TextBoxFor(x => x.StudentName, new { @class = "form-control" })
                    <span class="focus-input100"></span>
                </div>
                

                <span class="txt1 p-b-11">
                   Ders
                </span>
                <div class="wrap-input100 validate-input m-b-12" data-validate="Password is required">
                    <span class="btn-show-pass">
                        <i class="fa fa-eye"></i>
                    </span>
                    @Html.DropDownListFor(x => x.lessons, new SelectList(@ViewBag.lessons,"sec"));
                    <span class="focus-input100"></span>
                </div>
                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        Kayıt ol
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

